{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "checkJs": true,
        "allowJs": true,
        "noEmit": true
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}